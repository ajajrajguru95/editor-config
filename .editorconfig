# EditorConfig settings : https://EditorConfig.org

# Top-most EditorConfig file
#root = true // If kept in root folder

# All files
[*]
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
indent_style = space
indent_size = 2

# PHP files
[*.php]
indent_size = 4

# JavaScript files
[*.js]
indent_size = 2

[*.scss]
indent_size = 3

# Add more file types and rules as needed
